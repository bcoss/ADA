WITH Ada.Text_Io;
USE Ada.Text_Io;
WITH Ada.Integer_Text_Io;
USE Ada.Integer_Text_Io;

PROCEDURE SwapIntArrays IS
   MaxSize: Constant Integer := 10;
   TYPE IntArray IS ARRAY (1 .. MaxSize) OF Integer;

   --formatting lines
   PROCEDURE PrintLines IS

   BEGIN
      Put("------");
      New_Line;
   END PrintLines;

   PROCEDURE NewOrOld( K: Integer ) IS
   BEGIN
      IF K = 0 THEN
         Put("Original");
      ELSE
         Put("New");
      END IF;


   --Gets values to store in arrays
   FUNCTION GetValue return IntArray IS
      ArrayOne: IntArray;
   BEGIN
      FOR i IN ArrayOne'Range LOOP
         Put("Enter Array, number ");
         Put(I, 2);
         Put(": ");
         Get(ArrayOne(I));
         New_Line;
      END LOOP;
      RETURN ArrayOne;

--todo: Add negative exception
   END GetValue;

   --Swaps values from ArrayOne to ArrayTwo
   PROCEDURE SwapValues(AOne, ATwo: in out IntArray)IS
      A, B, C: Integer;






   BEGIN
      FOR I IN AOne'RANGE LOOP
         A := AOne(I);
         B := ATwo(I);
         C := ATwo(I);

         ATwo(I) := A;
         AOne(I) := C;

      END LOOP;

   END SwapValues;


   PROCEDURE PrintArrays(AOne, ATwo: in IntArray) IS
   BEGIN



      FOR I IN AOne'RANGE LOOP

         Put("Array One: ");
         Put(AOne(I), 3);

      END LOOP;
      new_Line;
      FOR I IN ATwo'RANGE LOOP
         Put("Array Two: ");
         Put(ATwo(I), 3);
      end loop;
      New_Line;

   END PrintArrays;


ArrayOne, ArrayTwo : IntArray;


BEGIN
   ArrayOne := GetValue;
   ArrayTwo := GetValue;

   PrintLines;
   PrintArrays(ArrayOne, ArrayTwo, 0);
   PrintLines;

   SwapValues(ArrayOne, ArrayTwo);

   PrintArrays(ArrayOne, ArrayTwo, 1);

END SwapIntArrays;
